{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "checkJs": false,
    "allowJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noErrorTruncation": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "logs", "storage", "**/*.test.js"]
}
